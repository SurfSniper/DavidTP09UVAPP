<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PainDiary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_theme_dark</item>
        <item name="colorOnPrimary">@color/white</item>
<!--                <item name="android:textColorPrimary">@color/white</item>-->
        <!--        <item name="android:textColor">@color/white</item>-->
        <item name="android:textColorHighlight">@color/teal_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_500</item>
        <item name="colorSecondaryVariant">@color/yellow_theme_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.PainDiary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PainDiary.TimePicker" parent="Widget.MaterialComponents.TimePicker">
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHighlight">@color/teal_100</item>
    </style>

    <style name="Theme.PainDiary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PainDiary.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Widget.PainDiary.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PainDiary.Chip.Choice</item>
    </style>

    <!-- Disabling elevation overlays because when chip's default background/surface
         composite are combined with elevation overlays in a highly elevated dialog,
         the resulting color becomes too light and causes contrast
         issues. -->
    <style name="ThemeOverlay.PainDiary.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="Theme.PainDiary.CircleImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.PainDiary.CustomTabText">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.PainDiary.DataEntryTextHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.PainDiary.LinearLayoutButtons">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top|center</item>
    </style>

    <style name="Theme.PainDiary.ImageTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="drawableTint">@color/grey_800</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>